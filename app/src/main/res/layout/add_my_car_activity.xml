<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/my_item_space"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:text="@string/car_number"
            android:textColor="@color/themeBlack"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_car_car_number"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:drawableEnd="@mipmap/right_arrow"
            android:layout_marginEnd="15dp"
            android:padding="15dp"
            android:hint="@string/input_car_number"
            android:textColorHint="@color/hint_text_color"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:text="@string/car_type"
            android:textColor="@color/themeBlack"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_car_select_car_type"
            android:layout_width="match_parent"
            android:hint="@string/input_car_type"
            android:textSize="12sp"
            android:drawableEnd="@mipmap/right_arrow"
            android:layout_marginEnd="15dp"
            android:padding="15dp"
            android:textColorHint="@color/hint_text_color"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:text="@string/car_load"
            android:textColor="@color/themeBlack"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_car_car_load"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="@string/input_car_load"
            android:textSize="12sp"
            android:padding="15dp"
            android:textColorHint="@color/hint_text_color"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:text="@string/driving_license"
            android:textColor="@color/themeBlack"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/add_car_upload_license"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/driving_license"
            android:layout_marginStart="15dp"
            android:textColorHint="@color/hint_text_color"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:id="@+id/add_car_submit"
        android:layout_marginTop="25dp"
        android:text="@string/submit_verify"
        android:textColor="@color/my_item_space"
        android:background="@drawable/circle_orange_button"
        android:layout_height="wrap_content" />
</LinearLayout>